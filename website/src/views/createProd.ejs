<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <link rel="stylesheet" href="/css/products.css" type="text/css" />
    </head>

    <script src="/js/createProd.js"></script>
    <body>
        <%- include("./partials/header") %>
        <main class="container-content-login">
            <form
                action="/collections"
                method="post"
                class="create-form"
                enctype="multipart/form-data"
            >
                <div class="control-form">
                    <input type="text" name="product_name" placeholder="Nombre Del Producto" class="control"
                    <%=locals.errors && errors.name ? 'is-invalid' : null %> 
                    value="<%=locals.oldData ? oldData.name : null %>"/> 
                    <% if (locals.errors && errors.name) { %>
                        <p style="color: red"><%= errors.name.msg %></p>
                    <% } %>
                </div>
                <div class="control-form">
                    <label>Imágen del producto</label>
                    <input type="file" name="image" multiple class="control" />
                    <% if (locals.errors && errors.image) { %>
                    <p style="color: red"><%= errors.image.msg %></p>
                    <% } %>
                </div>
                <div class="control-form">
                    <label for="">Tipo de lentes:</label>
                    <div class="flex-justify">
                        <input type="radio" name="type" value="Sunglasses" />
                        <label for="type1">Sunglasses</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="type" value="Eyeglasses" />
                        <label for="type1">Eyeglasses</label>
                    </div>
                </div>
                <div class="control-form">
                    <label for="">Genero:</label>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="M" />
                        <label for="type1">Masculino</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="F" />
                        <label for="type1">Femenino</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="U" />
                        <label for="type1">Unisex</label>
                    </div>
                </div>
                <div class="control-form">
                    <input
                        type="text"
                        name="brand"
                        placeholder="Marca Del Producto"
                        class="control"
                    />
                </div>

                <div class="control-form">
                    <label for="">Colores del marco:</label>
                    <div class="colorCheckboxes">
                        <% for(columnName in columnNames){ %>
                        <div class="inputColorBoxes">
                            <input
                                type="checkbox"
                                name="<%=columnNames[columnName] %>"
                                value="0"
                            />
                            <label for="" class="plr"
                                ><%=columnNames[columnName] %>
                            </label>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="control-form">
                    <input
                        type="text"
                        name="glass_color"
                        placeholder="Color de lentes"
                        class="control"
                    />
                </div>
                <div class="control-form">
                    <input
                        type="text"
                        name="model"
                        placeholder="Modelo"
                        class="control"
                    />
                </div>
                <div class="control-form">
                    <input
                        type="text"
                        name="price"
                        placeholder="Precio"
                        class="control"
                    />
                </div>
                <div class="control-form">
                    <input
                        type="text"
                        name="description"
                        placeholder="Descripción del producto"
                        class="control"
                    />
                </div>

                <button type="submit" class="button-form">Publicar</button>
            </form>
        </main>
        <%- include("./partials/footer") %>
    </body>
</html>
